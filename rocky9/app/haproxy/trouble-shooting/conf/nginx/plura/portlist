# /etc/nginx/plura/portlist
# -------------------------------------------------------------------
# 목적:
#  - 기본(default) 서버의 listen 포트를 한 곳에서 관리
#  - 운영 중 포트 정책 변경 시 main.conf 전체를 건드리지 않도록 분리
# -------------------------------------------------------------------

listen 80 default_server;
listen [::]:80 default_server;
